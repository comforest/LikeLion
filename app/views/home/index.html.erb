<% @bg.each do |t| %>
	<%= t.content %><br>
<% end %>

<section id="cd-timeline">

	<div class = 'age-nav'>
		<p>10대</p>
		<p>20대</p>
		<p>30대</p>
		<p>40대</p>
		<p>50대</p>
		<p>60대</p>
		<p>70대</p>
		<p>80대</p>
		<p>90대</p>
	</div>

	<% @sg.each do |t| %>
		<div class="cd-timeline-block age-<%= t.due.year.to_s[2] %>">
			<div class="cd-timeline-img"></div>
			<div class="cd-timeline-content">
				<div class="content-header">
					<button type="button"></button>
					<button type="button"></button>
				</div>
				<div class="content-body">
					<div class="arrow_box">
					 	<h1> <%= t.title %> </h1>
					 	<h2>AGE <span style="font-size:1.7em"><%= t.due.year %></span></h2>
					</div>
					
					<% t.doplans.each do |d| %>
						<div class="doplan-line">
							<%= d.content %>
			                <input type="checkbox" checked="checked" name="option">
			                <img src="https://cdn4.iconfinder.com/data/icons/geomicons/32/672366-x-128.png">
			                <img src="http://goo.gl/ntkbMh">
						</div>
					<% end %>
					
					
			        <div class="add-plan">
			            <input type="text" style="width:350px" placeholder="실행 계획 추가...">
			            <a href="#"><img src ="https://scontent-nrt1-1.xx.fbcdn.net/hphotos-xpa1/v/t1.0-9/10620522_913890425343231_3497715089682698679_n.jpg?oh=b3704d0bd6b74af5ce5da0b9ee5c8208&oe=566F2EEB"></a>
			        </div>
				</div>
			</div>
		</div>
	<% end %>
		
	</div>
</section>
